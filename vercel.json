{
    "version": 2,
    "builds": [
      {
        "src": "fe/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      },
      {
        "src": "be/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "be/server.js" },
      { "src": "/(.*)", "dest": "fe/build/index.html" }
    ]
  }
  